<idea-plugin>
    <id>com.maschinen-stockert.nibiru-code-plugin</id>
    <name>Nibiru Coding Agent</name>
    <vendor email="support@maschinen-stockert.de" url="https://www.maschinen-stockert.de">Maschinen Stockert</vendor>

    <description><![CDATA[
    A JetBrains IDE plugin for the Nibiru Coding Agent.
    <br/>
    <br/>
    Features:
    <ul>
        <li>Connect to Ollama and HuggingFace AI models</li>
        <li>Configure multiple AI models and create pipelines</li>
        <li>Model Context Protocol (MCP) support</li>
        <li>Easy-to-use configuration panel</li>
    </ul>
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Tool Window -->
        <toolWindow id="Nibiru Coding Agent"
                    secondary="false"
                    icon="AllIcons.Actions.Lightning"
                    anchor="right"
                    factoryClass="com.maschinen_stockert.nibiru.ui.NibiruToolWindowFactory"/>

        <!-- Application Services -->
        <applicationService serviceImplementation="com.maschinen_stockert.nibiru.settings.NibiruSettings"/>
        <applicationService serviceImplementation="com.maschinen_stockert.nibiru.services.OllamaService"/>
        <applicationService serviceImplementation="com.maschinen_stockert.nibiru.services.HuggingFaceService"/>
        <applicationService serviceImplementation="com.maschinen_stockert.nibiru.services.MCPService"/>

        <!-- Application Configurable -->
        <applicationConfigurable parentId="tools"
                                instance="com.maschinen_stockert.nibiru.settings.NibiruConfigurable"
                                id="com.maschinen_stockert.nibiru.settings.NibiruConfigurable"
                                displayName="Nibiru Coding Agent"/>
    </extensions>

    <actions>
        <!-- Add actions here if needed -->
    </actions>
</idea-plugin>
